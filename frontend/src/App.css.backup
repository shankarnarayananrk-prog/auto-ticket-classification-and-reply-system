@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap');

:root {
  --primary: #6366f1;
  --primary-glow: rgba(99, 102, 241, 0.4);
  --accent: #8b5cf6;
  --bg-gradient: radial-gradient(circle at top right, #f8fafc, #f1f5f9);
  --glass-bg: rgba(255, 255, 255, 0.7);
  --glass-border: rgba(255, 255, 255, 0.4);
  --text-main: #0f172a;
  --text-muted: #64748b;
  --success: #22c55e;
}

* {
  box-sizing: border-box;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

body {
  margin: 0;
  font-family: 'Plus Jakarta Sans', sans-serif;
  background: var(--bg-gradient);
  color: var(--text-main);
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.container {
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  padding: 4rem 2rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

header {
  text-align: center;
  margin-bottom: 5rem;
}

header h1 {
  font-family: 'Outfit', sans-serif;
  font-size: 3.5rem;
  font-weight: 700;
  margin: 0;
  background: linear-gradient(135deg, var(--primary), var(--accent));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: -0.02em;
}

header p {
  font-size: 1.125rem;
  color: var(--text-muted);
  font-weight: 500;
  margin-top: 0.5rem;
}

main {
  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  gap: 3rem;
  align-items: start;
  width: 100%;
  max-width: 1200px;
}

@media (max-width: 968px) {
  main { grid-template-columns: 1fr; }
  header h1 { font-size: 2.5rem; }
}

.glass-card {
  background: var(--glass-bg);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--glass-border);
  border-radius: 24px;
  padding: 2rem;
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05), 0 8px 10px -6px rgba(0, 0, 0, 0.05);
}

.title-with-icon {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 2rem;
  color: var(--text-main);
  font-family: 'Outfit', sans-serif;
}

.input-group {
  position: relative;
  margin-bottom: 2rem;
}

textarea {
  width: 100%;
  padding: 1.25rem;
  border: 2px solid #e2e8f0;
  border-radius: 16px;
  font-family: inherit;
  font-size: 1.05rem;
  resize: none;
  background: white;
  color: #0f172a;
}

textarea:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 4px var(--primary-glow);
}

.btn-submit {
  width: 100%;
  background: linear-gradient(135deg, var(--primary), var(--accent));
  color: white;
  border: none;
  padding: 1.15rem;
  border-radius: 16px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  box-shadow: 0 10px 15px -3px var(--primary-glow);
}

.btn-submit:hover:not(:disabled) {
  transform: translateY(-2px);
  filter: brightness(1.1);
}

.btn-submit:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.result-section {
  margin-top: 2.5rem;
  border-top: 2px dashed #e2e8f0;
  padding-top: 2rem;
}

.result-badge {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 1.5rem;
}

.badge {
  background: #eef2ff;
  color: var(--primary);
  padding: 0.5rem 1rem;
  border-radius: 99px;
  font-weight: 700;
  font-size: 0.875rem;
  text-transform: uppercase;
  border: 1px solid #c7d2fe;
}

.reply-box {
  background: white;
  padding: 1.5rem;
  border-radius: 20px;
  line-height: 1.7;
  color: #334155;
  border-left: 5px solid var(--primary);
  position: relative;
}

.reply-box::before {
  content: 'Gemini AI Response';
  position: absolute;
  top: -12px;
  left: 20px;
  background: var(--primary);
  color: white;
  font-size: 0.7rem;
  padding: 2px 8px;
  border-radius: 4px;
  font-weight: 700;
}

.history-item {
  background: white;
  padding: 1.25rem;
  border-radius: 18px;
  margin-bottom: 1rem;
  border: 1px solid #f1f5f9;
}

.history-item:hover {
  transform: translateX(5px);
  border-color: var(--primary-glow);
}

.history-q {
  color: var(--primary);
  font-weight: 700;
  font-size: 0.75rem;
  margin-bottom: 0.5rem;
}

.history-body {
  font-size: 0.95rem;
  color: var(--text-muted);
  margin: 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.status-tag {
  font-size: 0.7rem;
  color: var(--text-muted);
  display: block;
  margin-top: 0.5rem;
}

.spinner {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.animate-fade-in {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

/* User bar styles */
.user-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 1rem 1.5rem;
  border-radius: 16px;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  margin-bottom: 2rem;
  max-width: 1200px;
  width: 100%;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-weight: 600;
  color: var(--text-main);
}

.role-badge {
  background: linear-gradient(135deg, var(--primary), var(--accent));
  color: white;
  padding: 0.35rem 0.85rem;
  border-radius: 99px;
  font-size: 0.75rem;
  font-weight: 700;
}

.logout-btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: #f1f5f9;
  color: #64748b;
  border: none;
  padding: 0.6rem 1.2rem;
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
  font-size: 0.9rem;
  transition: all 0.2s;
}

.logout-btn:hover {
  background: #e2e8f0;
  color: var(--text-main);
}

/* Tabs styles */
.tabs-container {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 2rem;
  border-bottom: 2px solid #e2e8f0;
  padding-bottom: 0.5rem;
}

.tab-button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: transparent;
  border: none;
  color: var(--text-muted);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  border-radius: 10px 10px 0 0;
  transition: all 0.2s;
  position: relative;
}

.tab-button:hover {
  background: #f8fafc;
  color: var(--text-main);
}

.tab-button.active {
  color: var(--primary);
  background: #eef2ff;
}

.tab-button.active::after {
  content: '';
  position: absolute;
  bottom: -0.6rem;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(135deg, var(--primary), var(--accent));
  border-radius: 3px 3px 0 0;
}

.tab-content {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Ticket styles */
.ticket-number {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: #f0f9ff;
  color: #0369a1;
  padding: 0.75rem 1rem;
  border-radius: 12px;
  font-size: 0.95rem;
  margin-bottom: 1.5rem;
  border: 1px solid #bae6fd;
}

.dept-badge {
  background: #f0fdf4;
  color: #15803d;
  padding: 0.35rem 0.85rem;
  border-radius: 99px;
  font-size: 0.75rem;
  font-weight: 700;
  border: 1px solid #bbf7d0;
}

.dept-info {
  color: var(--text-muted);
  font-size: 0.95rem;
  text-align: center;
  padding: 2rem;
  background: #f8fafc;
  border-radius: 12px;
}

.ticket-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.ticket-num {
  font-family: 'Monaco', monospace;
  font-size: 0.75rem;
  color: var(--primary);
  font-weight: 700;
  background: #eef2ff;
  padding: 0.25rem 0.6rem;
  border-radius: 6px;
}

.client-name {
  font-size: 0.8rem;
  color: var(--text-muted);
  font-weight: 600;
}

.ticket-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 0.75rem;
}

.status-pending {
  background: #fef3c7;
  color: #92400e;
  border: 1px solid #fde68a;
}

.status-in_progress {
  background: #dbeafe;
  color: #1e40af;
  border: 1px solid #bfdbfe;
}

.status-resolved {
  background: #d1fae5;
  color: #065f46;
  border: 1px solid #a7f3d0;
}

.time-tag {
  font-size: 0.7rem;
  color: var(--text-muted);
}
